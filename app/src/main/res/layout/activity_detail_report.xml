<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailReport">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10sp"
        android:text="@string/report"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/expenseReport"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/expenseReport"
        app:layout_constraintBottom_toBottomOf="@id/expenseReport"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30sp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="@android:color/transparent"
        android:onClick="goBack"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/expenseReport"
        app:layout_constraintBottom_toBottomOf="@id/expenseReport"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30sp"
        android:src="@drawable/ic_filter_list_black_24dp"
        android:background="@android:color/transparent"
        android:onClick="displayFilterOptions"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/expenseReport"
        app:layout_constraintTop_toBottomOf="@id/expenseReport"
        app:layout_constraintRight_toLeftOf="@id/date"
        android:src="@drawable/ic_today_black_24dp"
        android:background="@android:color/transparent"
        android:id="@+id/calender"
        android:contentDescription="@string/calender"
        android:onClick="showCalender"
        android:layout_marginTop="20sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/calender"
        app:layout_constraintTop_toTopOf="@id/calender"
        app:layout_constraintBottom_toBottomOf="@id/calender"
        app:layout_constraintRight_toRightOf="@id/expenseReport"
        android:layout_marginStart="20sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/date"
        android:background="@android:color/transparent"
        android:onClick="showCalender"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_margin="4sp"
        android:id="@+id/divider"
        android:background="@color/colorAccent"
        android:alpha="0.5"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:id="@+id/reportRecyclerView"
        android:layout_margin="5sp"
        android:scrollbarFadeDuration="1000"
        android:overScrollMode="always"
        />

</android.support.constraint.ConstraintLayout>